{
  "name": "@modyqyw/mp-scss",
  "version": "1.0.2",
  "description": "Custom css for miniprograms.",
  "author": "ModyQyW <wurui7@mail3.sysu.edu.cn>",
  "license": "MIT",
  "scripts": {
    "lint": "stylelint . --custom-formatter=node_modules/stylelint-formatter-pretty",
    "build": "sass _index.scss index.css --style=compressed --no-source-map",
    "dev:docs": "vuepress dev docs",
    "build:docs": "vuepress build docs",
    "deploy:docs": "sh deploy.sh"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/mp-scss.git"
  },
  "keywords": [
    "css",
    "miniprogram",
    "scss"
  ],
  "devDependencies": {
    "@vssue/api-github-v4": "^1.4.0",
    "@vssue/vuepress-plugin-vssue": "^1.4.3",
    "@vuepress/plugin-active-header-links": "^1.4.0",
    "@vuepress/plugin-back-to-top": "^1.4.0",
    "@vuepress/plugin-medium-zoom": "^1.4.0",
    "@vuepress/plugin-nprogress": "^1.4.0",
    "@vuepress/plugin-pwa": "^1.4.0",
    "lint-staged": "^9.5.0",
    "sass": "^1.26.3",
    "stylelint": "^13.2.1",
    "stylelint-config-twbs-bootstrap": "^2.0.1",
    "stylelint-formatter-pretty": "^2.0.0",
    "vuepress": "^1.4.0",
    "vuepress-plugin-helper-live2d": "^1.0.0",
    "vuepress-plugin-sitemap": "^2.3.1",
    "yorkie": "^2.0.0"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-twbs-bootstrap/scss"
    ],
    "rules": {
      "declaration-no-important": null,
      "selector-no-qualifying-type": [
        true,
        {
          "ignore": [
            "attribute",
            "class"
          ]
        }
      ],
      "selector-type-no-unknown": null,
      "unit-no-unknown": null
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.scss": [
      "stylelint",
      "git add"
    ]
  }
}
