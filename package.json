{
  "name": "@modyqyw/mp-scss",
  "version": "0.15.3",
  "description": "Custom css for miniprograms.",
  "author": "ModyQyW <wurui7@mail3.sysu.edu.cn>",
  "license": "MIT",
  "scripts": {
    "lint": "stylelint ./**/*.scss"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ModyQyW/mp-scss.git"
  },
  "keywords": [
    "css",
    "miniprogram",
    "scss"
  ],
  "devDependencies": {
    "lint-staged": "^9.5.0",
    "stylelint": "^12.0.1",
    "stylelint-config-twbs-bootstrap": "^1.1.0",
    "yorkie": "^2.0.0"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-twbs-bootstrap/scss"
    ],
    "rules": {
      "color-hex-case": "upper",
      "declaration-no-important": null,
      "selector-type-no-unknown": null,
      "unit-no-unknown": null
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./**/*.scss": [
      "stylelint",
      "git add"
    ]
  }
}
