{
  "name": "@modyqyw/mp-scss",
  "version": "1.7.0",
  "description": "Custom css for miniprograms.",
  "keywords": [
    "css",
    "miniprogram",
    "scss"
  ],
  "homepage": "https://millcloud.github.io/mp-scss",
  "bugs": {
    "url": "https://github.com/MillCloud/mp-scss/issues"
  },
  "main": "./src/index.scss",
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui7@mail3.sysu.edu.cn",
    "url": "https://modyqyw.github.io"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MillCloud/mp-scss.git"
  },
  "scripts": {
    "lint": "prettier ./src/**/*.scss --write && stylelint ./src/**/*.scss --fix",
    "clean": "rimraf ./dist",
    "build-all": "rimraf ./dist && sass ./src:./dist/css",
    "build-index": "sass ./src/index.scss ./dist/css/index.css --no-source-map",
    "build-reset": "sass ./src/reset:./dist/css/reset --no-source-map",
    "build-elements": "sass ./src/elements:./dist/css/elements --no-source-map",
    "build-layout": "sass ./src/layout:./dist/css/layout --no-source-map",
    "build-components": "sass ./src/components:./dist/css/components --no-source-map",
    "build-classes": "sass ./src/classes:./dist/css/classes --no-source-map",
    "transform": "postcss ./dist --no-map -r",
    "copy": "copyfiles -u 2 ./dist/css/*.css ./dist/wxss && copyfiles -u 2 ./dist/css/**/*.css ./dist/wxss && copyfiles -u 2 ./dist/css/*.css ./dist/acss &&  copyfiles -u 2 ./dist/css/**/*.css ./dist/acss",
    "rename": "renamer -e ext -f css -r wxss \"./dist/wxss/**\" && renamer -e ext -f css -r acss \"./dist/acss/**\"",
    "build": "yarn lint && yarn clean && yarn build-all && yarn transform && yarn copy && yarn rename",
    "deploy": "np --no-tests --no-release-draft",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "sh deploy.sh",
    "release": "yarn deploy && yarn docs:deploy",
    "check": "ncu",
    "commit": "git-cz && git push"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@modyqyw/eslint-config": "^1.8.8",
    "@modyqyw/prettier-config": "^1.1.4",
    "@modyqyw/stylelint-config": "^1.0.0",
    "@vuepress/plugin-active-header-links": "^1.6.0",
    "@vuepress/plugin-back-to-top": "^1.6.0",
    "@vuepress/plugin-blog": "^1.9.2",
    "@vuepress/plugin-medium-zoom": "^1.6.0",
    "@vuepress/plugin-nprogress": "^1.6.0",
    "@vuepress/plugin-pwa": "^1.6.0",
    "commitizen": "^4.2.1",
    "copyfiles": "^2.4.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "renamer": "^2.0.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.2",
    "vuepress": "^1.6.0",
    "vuepress-plugin-code-copy": "^1.0.6",
    "vuepress-plugin-helper-live2d": "^1.0.2",
    "vuepress-plugin-sitemap": "^2.3.1"
  },
  "peerDependencies": {
    "sass": "~1.27.0",
    "sass-loader": "~10.0.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
