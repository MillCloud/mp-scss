{
  "name": "@modyqyw/mp-scss",
  "version": "1.4.0",
  "description": "Custom css for miniprograms.",
  "keywords": [
    "css",
    "miniprogram",
    "scss"
  ],
  "homepage": "https://github.com/Millcloud/mp-scss#readme",
  "bugs": {
    "url": "https://github.com/Millcloud/mp-scss/issues"
  },
  "license": "MIT",
  "author": "ModyQyW <wurui7@mail3.sysu.edu.cn>",
  "repository": {
    "type": "git",
    "url": "git@github.com:Millcloud/mp-scss.git"
  },
  "scripts": {
    "lint": "stylelint . --custom-formatter=node_modules/stylelint-formatter-pretty",
    "build": "sass _index.scss index.css --style=compressed --no-source-map",
    "commit": "git-cz && git push",
    "dev:docs": "vuepress dev docs",
    "build:docs": "rimraf index.css && vuepress build docs",
    "deploy:docs": "sh deploy.sh"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@modyqyw/eslint-config": "^1.2.7",
    "@modyqyw/stylelint-config-scss": "^1.0.5",
    "@vuepress/plugin-active-header-links": "^1.4.1",
    "@vuepress/plugin-back-to-top": "^1.4.1",
    "@vuepress/plugin-medium-zoom": "^1.4.1",
    "@vuepress/plugin-nprogress": "^1.4.1",
    "@vuepress/plugin-pwa": "^1.4.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "lint-staged": "^10.2.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.3.3",
    "stylelint-formatter-pretty": "^2.0.1",
    "vuepress": "^1.4.1",
    "vuepress-plugin-helper-live2d": "^1.0.0",
    "vuepress-plugin-sitemap": "^2.3.1",
    "yorkie": "^2.0.0"
  },
  "peerDependencies": {
    "sass": "~1.26.0",
    "sass-loader": "~8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHooks": {
    "commit-msg": "commitlint -e -V",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.scss": ["stylelint --custom-formatter=node_modules/stylelint-formatter-pretty"]
  }
}
